{
  "openapi": "3.1.0",
  "info": {
    "title": "OLLESTAFF-API DOCUMENTATION",
    "version": "0.0.1-SNAPSHOT"
  },
  "servers": [
    {
      "url": "https://dev.ollestaff.com",
      "description": "dev"
    },
    {
      "url": "http://localhost:8080",
      "description": "local"
    }
  ],
  "tags": [
    {
      "name": "AUTH",
      "description": "로그인"
    },
    {
      "name": "USER",
      "description": "유저 관련"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "USER"
        ],
        "summary": "회원가입",
        "operationId": "signup",
        "requestBody": {
          "description": "등록할 사용자 정보",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignUpRequest"
              },
              "example": {
                "nickname": "미밍",
                "phone": "01088454426",
                "phoneVerificationCode": "000000",
                "imageUrl": "https://example.jpg",
                "birthDate": 20000224
              }
            }
          },
          "required": true
        },
        "responses": {
          "302": {
            "description": "회원가입 성공(Redirect : /users/me/minimum)"
          }
        }
      }
    },
    "/users/me/minimum": {
      "get": {
        "tags": [
          "USER"
        ],
        "summary": "로그인 후 기본 사용자 정보 (nickname, type)",
        "operationId": "getMeMinimum",
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "example": {
                  "status": "SUCCESS",
                  "data": {
                    "nickname": "미밍",
                    "type": "STAFF"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login/oauth/naver": {
      "get": {
        "tags": [
          "AUTH"
        ],
        "summary": "네이버 로그인",
        "description": "네이버 로그인 후 redirect에 의해 호출 되는 엔드 포인트",
        "operationId": "loginNaver",
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "state",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "302": {
            "description": "로그인 성공 (Redirect: /users/me/minimum)"
          },
          "401": {
            "description": "로그인 실패",
            "content": {
              "application/json": {
                "example": {
                  "status": "LOGIN_FAILED",
                  "message": "로그인 실패"
                }
              }
            }
          },
          "200": {
            "description": "로그인 성공 (회원가입 필요)",
            "content": {
              "application/json": {
                "example": {
                  "status": "USER_NEED_SIGNUP",
                  "message": "회원가입을 진행해 주세요."
                }
              }
            }
          }
        }
      }
    },
    "/login/kakao/success": {
      "get": {
        "tags": [
          "AUTH"
        ],
        "summary": "카카오 로그인",
        "description": "카카오 로그인 후 redirect에 의해 호출 되는 엔드 포인트",
        "operationId": "loginKakao",
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "302": {
            "description": "로그인 성공 (Redirect: /users/me/minimum)"
          },
          "401": {
            "description": "로그인 실패",
            "content": {
              "application/json": {
                "example": {
                  "status": "LOGIN_FAILED",
                  "message": "로그인 실패"
                }
              }
            }
          },
          "200": {
            "description": "로그인 성공 (회원가입 필요)",
            "content": {
              "application/json": {
                "example": {
                  "status": "USER_NEED_SIGNUP",
                  "message": "회원가입을 진행해 주세요."
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignUpRequest": {
        "type": "object",
        "properties": {
          "nickname": {
            "type": "string",
            "maxLength": 8,
            "minLength": 2
          },
          "phone": {
            "type": "string",
            "minLength": 1
          },
          "phoneVerificationCode": {
            "type": "string",
            "minLength": 1
          },
          "imageUrl": {
            "type": "string"
          },
          "birthDate": {
            "type": "integer",
            "format": "int32",
            "maximum": 21000101,
            "minimum": 19000101
          }
        },
        "required": [
          "birthDate"
        ]
      }
    }
  }
}