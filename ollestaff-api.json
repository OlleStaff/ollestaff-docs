{
  "openapi": "3.1.0",
  "info": {
    "title": "OLLESTAFF-API DOCUMENTATION",
    "version": "0.0.1-SNAPSHOT"
  },
  "servers": [
    {
      "url": "https://dev.ollestaff.com",
      "description": "dev"
    },
    {
      "url": "http://localhost:8080",
      "description": "local"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "user-controller"
        ],
        "operationId": "signup",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignUpRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "tags": [
          "user-controller"
        ],
        "operationId": "me",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/UserEntity"
                }
              }
            }
          }
        }
      }
    },
    "/users/me/minimum": {
      "get": {
        "tags": [
          "user-controller"
        ],
        "operationId": "getMeMinimum",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/GetMeMinimumResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignUpRequest": {
        "type": "object",
        "properties": {
          "nickname": {
            "type": "string",
            "maxLength": 8,
            "minLength": 2
          },
          "phone": {
            "type": "string",
            "minLength": 1
          },
          "phoneVerificationCode": {
            "type": "string",
            "minLength": 1
          },
          "imageUrl": {
            "type": "string"
          },
          "birthDate": {
            "type": "integer",
            "format": "int32",
            "maximum": 21000101,
            "minimum": 19000101
          }
        },
        "required": [
          "birthDate"
        ]
      },
      "UserEntity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "nickname": {
            "type": "string"
          },
          "pid": {
            "type": "string"
          },
          "provider": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          },
          "birthDate": {
            "type": "string",
            "format": "date"
          },
          "type": {
            "type": "string",
            "enum": [
              "UNDECIDED",
              "GUESTHOUSE",
              "STAFF",
              "ADMIN"
            ]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "GetMeMinimumResponse": {
        "type": "object",
        "properties": {
          "nickname": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "UNDECIDED",
              "GUESTHOUSE",
              "STAFF",
              "ADMIN"
            ]
          }
        }
      }
    }
  }
}